# Production Environment Variables
# À REMPLIR avec vos vraies clés API

# API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here
HEYGEN_API_KEY=your_heygen_key_here
HEYGEN_AVATAR_ID=your_avatar_id_here

# ChromaDB Configuration (Cloud Run)
CHROMA_HOST=rabbi-chroma-db-xxxxx-ew.a.run.app
CHROMA_PORT=443
CHROMA_COLLECTION_NAME=rabbi_nachman

# Sefaria API
SEFARIA_API_BASE=https://www.sefaria.org/api

# Server Configuration
BACKEND_PORT=8000
FRONTEND_URL=https://your-frontend-domain.netlify.app
ENVIRONMENT=production

# Google Cloud
GCP_PROJECT_ID=your-project-id
GCS_BUCKET=rabbi-nachman-vectors

# RAG Configuration
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5
LLM_MODEL=claude-3-5-sonnet-20241022
CHUNK_SIZE=800
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=10
SIMILARITY_THRESHOLD=0.7

# HeyGen Configuration
HEYGEN_VOICE_ID=fr-FR-DeniseNeural
HEYGEN_VOICE_RATE=1.0
HEYGEN_EMOTION=friendly

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
CORS_ORIGINS=https://your-frontend-domain.netlify.app,https://www.your-custom-domain.com
